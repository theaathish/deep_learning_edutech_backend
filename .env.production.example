# ==============================================
# EduTech Production Environment Configuration
# Copy to .env.production and fill in values
# ==============================================

NODE_ENV=production
PORT=8000

# ==============================================
# Database (Local PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://edutech:YOUR_SECURE_PASSWORD@localhost:5432/edutech?schema=public

# ==============================================
# JWT Configuration
# Generate secrets with: openssl rand -base64 64
# ==============================================
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_64
JWT_REFRESH_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_64
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ==============================================
# CORS - Your Vercel Frontend URL
# ==============================================
CORS_ORIGIN=https://your-app.vercel.app

# ==============================================
# API URL - Cloudflare Tunnel Domain
# ==============================================
API_URL=https://api.deeplearningedutech.com
CLOUDFLARE_TUNNEL_ENABLED=true

# ==============================================
# Stripe Payment
# ==============================================
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ==============================================
# Razorpay Payment (for India)
# ==============================================
RAZORPAY_KEY_ID=rzp_live_xxx
RAZORPAY_SECRET=xxx

# ==============================================
# Email (Gmail SMTP)
# Use App Password: https://myaccount.google.com/apppasswords
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your@gmail.com
EMAIL_PASSWORD=your_16_char_app_password

# ==============================================
# Upload Configuration
# ==============================================
UPLOAD_PATH=/mnt/data/uploads
MAX_FILE_SIZE=104857600
MAX_VIDEO_SIZE=524288000
MAX_IMAGE_SIZE=10485760

# ==============================================
# Admin Account (for seeding)
# ==============================================
ADMIN_EMAIL=admin@deeplearningedutech.com
ADMIN_PASSWORD=CHANGE_ME_secure_admin_password
