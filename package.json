{
  "name": "edutech-backend",
  "version": "1.0.0",
  "description": "Backend for EduTech Education Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc && npm run prisma:generate",
    "start": "node dist/index.js",
    "start:prod": "NODE_OPTIONS='--max-old-space-size=384' node dist/index.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop edutech-api",
    "pm2:restart": "pm2 restart edutech-api",
    "pm2:reload": "pm2 reload edutech-api --update-env",
    "pm2:logs": "pm2 logs edutech-api",
    "pm2:status": "pm2 status",
    "deploy": "bash scripts/deploy-pm2.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "seed": "ts-node src/utils/seed.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "clear-db": "bash scripts/clear-db.sh",
    "clear-data": "bash scripts/clear-data.sh",
    "backup": "bash /opt/backup-db.sh"
  },
  "keywords": [
    "edutech",
    "education",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "razorpay": "^2.9.6",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
